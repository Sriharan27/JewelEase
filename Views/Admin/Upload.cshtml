@{
    Layout = "~/Views/Admin/AdminLayout.cshtml";
}

<h2>Upload .glb File</h2>

<form asp-action="UploadFile" asp-controller="Admin" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label for="file">Choose a .glb file to upload:</label>
        <input type="file" class="form-control" name="file" id="file" accept=".glb" required />
    </div>
    <button type="submit" class="btn btn-primary">Upload</button>
</form>

@if (ViewBag.Message != null)
{
    <div class="alert alert-info">
        @ViewBag.Message
    </div>
}
