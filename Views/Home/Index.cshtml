@model IEnumerable<JewelEase.Models.Slider>
@{
    Layout = "~/Views/Home/CommonLayout.cshtml";
}

<!-- Slider -->
<section class="section-slide">
	<div class="wrap-slick1">
		<div class="slick1">
			@foreach (var slider in Model)
			{
				<div class="item-slick1" style="background-image: url(@Url.Content(slider.ImageUrl.Replace("\\", "/")));">
					<div class="container h-full">
						<div class="flex-col-l-m h-full p-t-100 p-b-30 respon5">
							<div class="layer-slick1 animated visible-false" data-appear="fadeInDown" data-delay="0">
								<span class="ltext-101 cl2 respon2">
									@(string.IsNullOrEmpty(slider.TextDescription) ? Html.Raw("&nbsp;") : slider.TextDescription)
								</span>
							</div>

							<div class="layer-slick1 animated visible-false" data-appear="fadeInUp" data-delay="800">
								<h2 class="ltext-201 cl2 p-t-19 p-b-43 respon1">
									@(string.IsNullOrEmpty(slider.MainHeading) ? Html.Raw("&nbsp;") : slider.MainHeading)
								</h2>
							</div>

							<div class="layer-slick1 animated visible-false" data-appear="zoomIn" data-delay="1600">
								<a href="@slider.RedirectPage" class="flex-c-m stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-15 trans-04">
									Shop Now
								</a>
							</div>
						</div>
					</div>
				</div>
			}
		</div>
	</div>
</section>


<!-- Categories Section -->
<div class="sec-banner bg0 p-t-80 p-b-50">
    <div class="container">
		<div class="p-b-10">
			<h3 class="ltext-103 cl5">
				Categories<br />
			</h3>
		</div>
        <div class="row" id="allCategories"></div>
    </div>
</div>


<!-- Product -->
<section class="bg0 p-t-23 p-b-140">
	<!-- Product Section -->
	<div class="bg0 m-t-23">
		<div class="container">

			<div class="p-b-10">
				<h3 class="ltext-103 cl5">
					Product Overview
				</h3>
			</div>

			<div class="flex-w flex-sb-m p-b-52">
				<!-- Filter Buttons -->
				<div class="flex-w flex-l-m filter-tope-group m-tb-10" id="filter-buttons">
					<!-- Categories will be dynamically loaded here -->
				</div>
			</div>


			<!-- Product Grid -->
			<div class="row" id="itemsContainer">
				<!-- Items will be inserted here by JavaScript -->
			</div>

			<!-- Load More Button -->
			<div class="flex-c-m flex-w w-full p-t-45">
				<a href="#" id="IndexloadMore" class="flex-c-m stext-101 cl5 size-103 bg2 bor1 hov-btn1 p-lr-15 trans-04">
					Load More
				</a>
			</div>
		</div>
	</div>
</section>

@section Scripts {
	<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
	<script src="~/js/index.js"></script>	
	<script src="~/js/category.js"></script>

}