@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login and Signup Form</title>
    <link href="https://fonts.googleapis.com/css?family=Poppins:400,500,600,700&display=swap" rel="stylesheet">

    <!-- Link to the external CSS file -->
    <link href="~/css/LoginPage.css" rel="stylesheet" />

    <!-- jQuery CDN (Ensure jQuery is loaded before custom scripts) -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
</head>
<body>
    <div class="wrapper">
        <!-- Close Icon -->
        <span class="close-icon" onclick="goHome()">&#10005;</span>

        <div class="title-text">
            <div class="title login">Login</div>
            <div class="title signup">Signup</div>
            <div class="title resetpassword" style="display:none">Reset Password</div>
        </div>
        <div class="form-container">
            <div class="slide-controls">
                <input type="radio" name="slide" id="login" checked>
                <input type="radio" name="slide" id="signup">
                <label for="login" class="slide login">Login</label>
                <label for="signup" class="slide signup">Signup</label>
                <div class="slider-tab"></div>
            </div>
            <div class="form-inner">
                <!-- Login Form -->
                <form action="#" class="login">
                    <div class="field">
                        <input type="text" id="username" placeholder="Email Address" required>
                    </div>
                    <div class="field">
                        <input type="password" id="password" placeholder="Password" required>
                    </div>
                    <div class="pass-link"><a href="#" onclick="showResetPasswordForm()">Forgot password?</a></div>
                    <div class="field btn">
                        <div class="btn-layer"></div>
                        <input id="btnlogin" type="submit" value="Login">
                    </div>
                    <div class="signup-link">Not a member? <a href="#">Signup now</a></div>
                </form>

                <!-- Signup Form -->
                <form action="#" class="signup">
                    <div class="field">
                        <input type="text" id="registerName" placeholder="Name" required>
                    </div>
                    <div class="field">
                        <input type="email" id="registerEmail" placeholder="Email Address" required>
                        <button type="button" id="signupverifyEmail" onclick="sendOtp('registerEmail','Signup')">Verify</button>
                    </div>
                    <div class="field">
                        <input type="password" id="registerPassword" placeholder="Password" required>
                    </div>
                    <div class="field">
                        <input type="password" id="confirmPassword" placeholder="Confirm password" required>
                    </div>
                    <div class="field btn">
                        <div class="btn-layer"></div>
                        <input id="btnreg" type="submit" value="Signup">
                    </div>
                </form>

                <!-- Reset Password Form -->
                <form action="#" class="reset-password" style="display:none">
                    <div class="field">
                        <input type="email" id="resetEmail" placeholder="Email Address" required>
                        <button type="button" id="verifyEmail" onclick="sendOtp('resetEmail','ResetPassword')">Verify</button>
                    </div>
                    <div class="field">
                        <input type="password" id="resetPassword" placeholder="Password" required>
                    </div>
                    <div class="field">
                        <input type="password" id="resetConfirmPassword" placeholder="Confirm password" required>
                    </div>
                    <div class="field btn">
                        <div class="btn-layer"></div>
                        <input id="btnreset" type="submit" value="Reset Password">
                    </div>
                    <div class="back-link">Remember password? <a href="#" onclick="goBackToLogin()">Back to Login</a></div>
                </form>
            </div>
        </div>
    </div>

    <!-- Your custom JS -->
    <script src="~/js/LoginPage.js"></script>
    <script src="~/vendor/sweetalert/sweetalert.min.js"></script>

    <!-- JavaScript to handle redirection and form switching -->
    <script>
        // Redirect to Home
        function goHome() {
            // Redirect to the Home controller's Index action
            window.location.href = '@Url.Action("Index", "Home")';
        }
    </script>
</body>
</html>
