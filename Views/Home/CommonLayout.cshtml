	<script src="https://maps.googleapis.com/maps/api/js?key=@Configuration["GoogleApi:Key"]&libraries=places"></script>
	<script>
		(function ($) {
			"use strict";
			$(document).ready(function () {
				var selector_map = $('#google_map');
				var scrollwhell = selector_map.attr('data-scrollwhell');
				var draggable = selector_map.attr('data-draggable');
				var map_zoom = selector_map.attr('data-zoom');
				var placeId = selector_map.attr('data-place-id'); // Get the Place ID from data attribute

				if (scrollwhell == null) {
					scrollwhell = 0;
				}
				if (draggable == null) {
					draggable = 0;
				}
				if (map_zoom == null) {
					map_zoom = 11;
				}

				// Initialize map
				var map = new google.maps.Map(document.getElementById('google_map'), {
					zoom: Number(map_zoom),
					scrollwheel: scrollwhell,
					draggable: draggable
				});

				var service = new google.maps.places.PlacesService(map);
				service.getDetails({
					placeId: placeId,
					fields: ['geometry', 'name', 'formatted_address', 'rating', 'opening_hours', 'photos']
				}, function (place, status) {
					if (status === google.maps.places.PlacesServiceStatus.OK) {
						map.setCenter(place.geometry.location);

						var marker = new google.maps.Marker({
							position: place.geometry.location,
							map: map,
							title: 'Location'
						});

						// Add click event listener to the marker
						google.maps.event.addListener(marker, 'click', function () {
							// Open Google Maps directions in a new tab
							var directionsUrl = 'https://www.google.com/maps/dir/?api=1&destination=' + place.geometry.location.lat() + ',' + place.geometry.location.lng();
							window.open(directionsUrl, '_blank');
						});
					}
				});
			});
		})(jQuery);
	</script>
